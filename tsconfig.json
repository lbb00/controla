{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}
